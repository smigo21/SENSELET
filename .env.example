# EATMS Environment Configuration

# Database
DATABASE_URL=postgresql://eatms_user:eatms_password@localhost:5432/eatms_db
REDIS_URL=redis://localhost:6379

# Django Backend
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# External APIs
SMS_GATEWAY_URL=https://api.sms-gateway.et
SMS_API_KEY=your-sms-gateway-api-key
MAP_API_KEY=your-map-service-api-key
PAYMENT_GATEWAY_URL=https://api.payment-gateway.et
PAYMENT_API_KEY=your-payment-gateway-api-key

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=eatms-files
AWS_S3_REGION_NAME=us-east-1

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# Feature Flags
ENABLE_SMS_INTEGRATION=True
ENABLE_WEBSOCKET_UPDATES=True
ENABLE_OFFLINE_MODE=True
ENABLE_ANALYTICS=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/eatms/backend.log

# Mobile App
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# Web Dashboard
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws
VITE_MAP_API_KEY=your-map-api-key

# Development
DEVELOPMENT_MODE=True
ENABLE_DEBUG_TOOLBAR=True
